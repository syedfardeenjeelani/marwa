---
// src/pages/index.astro
import background from '../assets/impressionist-home-bg.jpg';
---

<div id="container">
  <!-- Background Image -->
  <img id="background" src={background.src} alt="Background" fetchpriority="high" />

  <!-- Optional Overlay -->
  <div id="overlay"></div>

  <!-- Main Content -->
  <main id="content">
    <a  class="font-beth ">Life in sujood</a>
	<div class="flex justify-center items-center gap-[1.9rem]">
		<a href="/about" class="cardo-regular" >About</a>
		<a href="/blog" class="cardo-regular" >Blog</a>
		<a  href='/resources' class="cardo-regular">Resources</a>
	</div>
  </main>
</div>

<style>
  /* Container covers full screen */
  #container {
    position: relative;
    height: 100vh;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Background image (fixed behind everything) */
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.8;
    z-index: -2;
  }


  /* Main content centered */
  #content {
    position: relative;
    z-index: 1;
  }

  /* Custom font */
  .font-beth {
    font-family: "Beth Ellen", cursive;
    font-size: 40.32px;
    text-transform: lowercase;
    color: #242121;
    font-style: normal;
    font-weight: 400;
    transition: text-decoration 0.2s ease;     /* <-- set your desired width */
  height: 80px;    /* <-- set your desired height */
  display: flex;
  /* justify-content: center; */
  align-items: baseline; 
  margin: 0 0 0.5rem 0;
  padding-bottom: 4px;
  padding-left: 20px;
  }

  .font-beth:hover {
    text-decoration: underline;
    cursor: pointer;
    text-decoration-thickness: 0.8px;
    text-underline-offset: 0.2em;
  }

  .cardo-regular {
  font-family: "Cardo";
  font-weight: 400;
  letter-spacing: 1.4px;
  list-style: none;
  line-height: 1.6;
  text-transform: uppercase;
  font-style: normal;
  font-size: 14.4px;
  color: #000000;
}
.cardo-regular:hover {
    text-decoration: underline;
    cursor: pointer;
    text-decoration-thickness: 0.8px;
    text-underline-offset: 0.2em;
  }
</style>
