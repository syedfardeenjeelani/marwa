---
import TransparentNavbar from '../components/Navbar';
import Layout from '../layouts/Layout.astro';
import background from '../assets/aboutblogresources.jpg';
import { getPosts } from '../lib/getPosts';

// Dummy blog data
const blogs = await getPosts();

console.log(blogs[0], 'yeeeeeeeee')
---

<Layout>
  <TransparentNavbar client:load />
  
  <div id="blog-list-container" class="relative w-full flex items-center justify-center overflow-hidden min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
    <img 
      class="absolute inset-0 w-full h-full object-cover opacity-70 z-0" 
      src={background.src}
      alt="Background" 
      fetchpriority="high" 
    />
    
    <!-- Overlay for better contrast -->
    <div class="absolute inset-0 bg-gradient-to-b from-white/20 via-transparent to-white/30 z-5"></div>
    
    <div class="relative z-20 flex flex-col items-center w-full py-20 px-6">
      <!-- Page Header -->
      <div class="text-center mb-16">
        <h1 class="cardo-regular text-4xl md:text-5xl text-center mb-4 text-gray-900 drop-shadow-sm">
          Blogs
        </h1>
        <p class="text-lg text-gray-700 max-w-2xl mx-auto drop-shadow-sm">
          Discover insights, stories, and inspiration from our latest writings
        </p>
      </div>
      
      <!-- Blog Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-7xl">
        {blogs.map((blog: any) => (
          <a 
            href={`/blog/${blog.slug.current}`} 
            class="group relative bg-white/90 backdrop-blur-md rounded-2xl shadow-lg hover:shadow-2xl overflow-hidden border border-white/20 transition-all duration-300 hover:scale-105 hover:bg-white/95 cursor-pointer"
          >
            <!-- Hover gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-purple-500/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
            
            <!-- Image Container -->
            <div class="relative overflow-hidden">
              <img 
                src={blog.mainImage.asset.url} 
                alt={blog.title} 
                class="w-full h-56 object-cover transition-transform duration-300 group-hover:scale-110" 
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              <!-- Date Badge -->
              <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full shadow-md">
                <span class="text-xs font-medium text-gray-700">
                  {new Date(blog.publishedAt).toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric', 
                    year: 'numeric' 
                  })}
                </span>
              </div>
            </div>
            
            <!-- Content Container -->
            <div class="relative z-20 p-6 flex flex-col gap-3">
              <!-- Category/Tags (if available) -->
              <div class="flex items-center gap-2 mb-1">
                <span class="text-xs text-blue-600 bg-blue-50 px-2 py-1 rounded-full font-medium">
                  Article
                </span>
                <span class="text-xs text-gray-500">
                  5 min read
                </span>
              </div>
              
              <!-- Title -->
              <h2 class="text-xl font-bold text-gray-900 group-hover:text-blue-700 transition-colors duration-200 line-clamp-2 mb-2">
                {blog.title}
              </h2>
              
              <!-- Description -->
              <p class="text-gray-700 text-sm line-clamp-3 leading-relaxed mb-4">
                {blog.description}
              </p>
              
              <!-- Read More Link -->
              <div class="flex items-center justify-between mt-auto pt-2 border-t border-gray-100">
                <span class="text-sm font-medium text-blue-600 group-hover:text-blue-700 transition-colors">
                  Read More
                </span>
                <svg 
                  class="w-4 h-4 text-blue-600 group-hover:text-blue-700 group-hover:translate-x-1 transition-all duration-200" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
      
    </div>
  </div>
</Layout>

<style>
  /* Custom styles for better text truncation */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Enhanced Cardo font styling */
  .cardo-regular {
    font-family: "Cardo", serif;
    font-weight: 400;
    letter-spacing: 1.4px;
    line-height: 1.6;
    text-transform: none;
    font-style: normal;
    color: #000000;
  }

  .cardo-regular:hover {
    text-decoration: underline;
    cursor: pointer;
    text-decoration-thickness: 0.8px;
    text-underline-offset: 0.2em;
  }

  /* Smooth glassmorphism effect */
  .backdrop-blur-md {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
  }

  /* Enhanced shadow on hover */
  .hover\:shadow-2xl:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
  }

  /* Smooth gradient overlay */
  .bg-gradient-to-t {
    background: linear-gradient(to top, var(--tw-gradient-stops));
  }

  /* Smooth transform for arrows */
  .group:hover .group-hover\:translate-x-1 {
    transform: translateX(0.25rem);
  }
</style>